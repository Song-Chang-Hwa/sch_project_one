	@Transactional
	public ComResultVO update(Map<String, Object> paramMap)throws Exception{
		
		ComResultVO comResultVO = new ComResultVO();
		
		Map<String, Object> info = (Map<String, Object>) paramMap.get("info");
		info.put("case", "update");
		
		Map<String, Object> detail = (Map<String, Object>) this.commonBaseDAO.selectByPk("AbtestMstrDAO.select", info);
		if (detail == null) {
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_FAIL);
			comResultVO.setMsg("수정할 테스트 정보가 없습니다.");
			return comResultVO;
		}
		if ("50".equals(detail.get("AB_STATUS"))) {
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_FAIL);
			comResultVO.setMsg("테스트 진행중에는 수정할 수 없습니다");
			return comResultVO;
		}
		
		List<Map<String, Object>> list = this.commonBaseDAO.list("AbtestMstrDAO.selectListByAbtestNm", info);
		if (0 < list.size()) {
			final Map<String, Object> entity = (Map<String, Object>) list.get(0);
			
			final String FLD_NM = (String) entity.get("FLD_NM");
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_FAIL);
			comResultVO.setMsg(FLD_NM + " 유형에 같은 이름의 테스트명이 존재합니다.");
			
			return comResultVO;
		}
		
		int hresult1 = (int) this.commonBaseDAO.update("AbtestMstrDAO.update", info);
		
		final Integer ABTEST_ID = (Integer) info.get("ABTEST_ID");
		logger.debug("ABTEST_ID: {}", ABTEST_ID);
		
		if (hresult1 > 0) {
			this.commonBaseDAO.delete("AbtestRsltDAO.deleteByAbtestId", info);
			
			List<Map<String, Object>> layoutList = (List<Map<String, Object>>) paramMap.get("list");
			if (null != layoutList && 0 < layoutList.size()) {
				int ORDINAL = 1;
				for (int i=0; i<layoutList.size(); i++) {
					final Map<String, Object> layout = layoutList.get(i);
					
					layout.put("ABTEST_ID", ABTEST_ID);
					layout.put("TRG_IDX", info.get("TRG_IDX"));
					layout.put("ORDINAL", ORDINAL++);
					
					this.commonBaseDAO.insert("AbtestRsltDAO.insert", layout);
				}
			}
			
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_OK);
		} else {
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_SERVER_ERROR);
			comResultVO.setMsg("수정된 테스트정보가 없습니다.");
		}
		
		return comResultVO;
	}
	
	@Transactional
	public ComResultVO delete(Map<String, Object> paramMap)throws Exception{
		
		ComResultVO comResultVO = new ComResultVO();
		
		int hresult1 = (int) this.commonBaseDAO.update("AbtestMstrDAO.delete", paramMap);
		
		if (hresult1 > 0) {
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_CREATE_OK);
			this.commonBaseDAO.delete("AbtestRsltDAO.deleteByAbtestId", paramMap);
		} else {
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_SERVER_ERROR);
			comResultVO.setMsg("삭제된 테스트정보가 없습니다.");
		}
		return comResultVO;
	}
	
	/**
	 * 생성
	 * @param paramMap
	 * @return
	 * @throws Exception
	 */
	@Transactional
	public ComResultVO insert(Map<String, Object> paramMap)throws Exception{
		
		ComResultVO comResultVO = new ComResultVO();
		
		Map<String, Object> info = (Map<String, Object>) paramMap.get("info");
		info.put("case", "insert");
		
		List<Map<String, Object>> list = this.commonBaseDAO.list("AbtestMstrDAO.selectListByAbtestNm", info);
		if (0 < list.size()) {
			final Map<String, Object> entity = (Map<String, Object>) list.get(0);
			
			final String FLD_NM = (String) entity.get("FLD_NM");
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_FAIL);
			comResultVO.setMsg(FLD_NM + " 유형에 같은 이름의 테스트가 존재합니다.");
		} else {
			
			List<Map<String, Object>> layoutList = (List<Map<String, Object>>) paramMap.get("list");
			
			if (layoutList != null && layoutList.size() > 0) {
				
				// WP2_ABTEST_MSTR insert 
				info.put("AB_STATUS", "40");
				this.commonBaseDAO.insert("AbtestMstrDAO.insert", info);
				final Integer ABTEST_ID = (Integer) info.get("ABTEST_ID");
				logger.debug("ABTEST_ID: {}", ABTEST_ID);
				
				if (ABTEST_ID != null) {
					
					int ORDINAL = 1;
					int cnt = 0;
					// WP2_ABTEST_RSLT insert 
					for (Map<String, Object> rsltMap : layoutList) {
						rsltMap.put("ABTEST_ID", ABTEST_ID);
						rsltMap.put("TRG_IDX", info.get("TRG_IDX"));
						rsltMap.put("ORDINAL", ORDINAL++);
						cnt += this.commonBaseDAO.update("AbtestRsltDAO.insert", rsltMap);
					}
					
					Map<String, Object> dataMap = new HashMap<String, Object>();
					dataMap.put("ABTEST_ID", ABTEST_ID);
					dataMap.put("abtestRsltCount", cnt);
					
					comResultVO.setCode(EDUAIConstant.HTTP_STATUS_CREATE_OK);
					comResultVO.setData(dataMap);
					
				} else {
					comResultVO.setCode(EDUAIConstant.HTTP_STATUS_FAIL);
					comResultVO.setMsg("저장된 테스트가 없습니다.");
				}
				
			} else {
				comResultVO.setCode(EDUAIConstant.HTTP_STATUS_FAIL);
				comResultVO.setMsg("레이아웃을 입력하십시오.");
			}
		}
	   	
		return comResultVO;
	}

	public ComResultVO detail(Map<String, Object> paramMap) {
		ComResultVO comResultVO = new ComResultVO();
		
		try {
		
			Map<String, Object> info = (Map<String, Object>) this.commonBaseDAO.selectByPk("AbtestMstrDAO.select", paramMap);;
			List<Map<String, Object>> list = this.commonBaseDAO.list("AbtestRsltDAO.selectList", paramMap);
			
			Map<String, Object> dataMap = new HashMap<String, Object>();
			dataMap.put("info", info);
			dataMap.put("list", list);
			dataMap.put("dataCount", list.size());
			
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_OK);
			comResultVO.setData(dataMap);
			
		} catch(Exception e) {
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_FAIL);
			comResultVO.setMsg(e.getMessage());
		}

		return comResultVO;	
	}
	
	public ComResultVO result(Map<String, Object> paramMap) {
		ComResultVO comResultVO = new ComResultVO();
		
		try {
		
			List<Map<String, Object>> list = this.commonBaseDAO.list("AbtestRsltDAO.selectRsltList", paramMap);
			
			Map<String, Object> dataMap = new HashMap<String, Object>();
			dataMap.put("list", list);
			dataMap.put("dataCount", list.size());
			
			if (2 > list.size()) {
				comResultVO.setCode(EDUAIConstant.HTTP_STATUS_FAIL);
				comResultVO.setMsg("검증결과가 없습니다.");
			} else {
				comResultVO.setCode(EDUAIConstant.HTTP_STATUS_OK);
				comResultVO.setData(dataMap);
			}
			
		} catch(Exception e) {
			comResultVO.setCode(EDUAIConstant.HTTP_STATUS_FAIL);
			comResultVO.setMsg(e.getMessage());
		}

		return comResultVO;	
	}
	
	@Transactional(readOnly=true)
	public List<Map<String, Object>> selectListForAbtestTree(Map<String, Object> paramMap)throws Exception{
		final List<Map<String, Object>> list = this.commonBaseDAO.list("AbtestMstrDAO.selectListForAbtestTree", paramMap);
		
		for (Map<String, Object> item : list) {
			final String type = (String) item.get("type");
			
			// parent node인 경우 체크박스가 나오지 않도록 처리
			if ("typeAbtest".equals(type)) {
				Map<String, Object> aAttr = new HashMap<>();
				aAttr.put("class", "no_checkbox");
				
				item.put("a_attr", aAttr);
			}
		}

		return list;
	}

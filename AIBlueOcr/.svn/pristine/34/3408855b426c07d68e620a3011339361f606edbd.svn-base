		dataMap.put("totalExcuteModelCount", this.commonBaseDAO.selectByPk("AiMstrDAO.selectTotalExcuteModelCount", null));
		dataMap.put("totalDataCount", this.commonBaseDAO.selectByPk("DatasetDAO.selectTotalDataCount", null));
		dataMap.put("totalSegGount", this.commonBaseDAO.selectByPk("SegMstrDAO.selectTotalSegGount", null));
		
		comResultVO.setCode(EDUAIConstant.HTTP_STATUS_OK);

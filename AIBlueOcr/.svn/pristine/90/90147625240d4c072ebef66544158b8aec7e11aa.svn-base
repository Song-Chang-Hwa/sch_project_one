<h2 class="tit-level1">개인화 추천 결과</h2>

<div class="subConView">			
	<div class="conWrap">
		<div class="viewTable">	
			<div class="row mB7 mT3">
				<div class="col-sm-3">
					<div class="chartBtn mT2">
						<a href="javascript:void(0)" (click)="openAiModelModal()"  class="btn btn-default" title="모델 선택"><i class="ti-plus"></i></a>
						<a href="javascript:void(0)" (click)="evtBtnDeleteClick()"  class="btn btn-default" title="모델 삭제"><i class="ti-trash"></i></a>
					</div>
				</div>
				<div class="col-sm-7">
					<label class="col-sm-2 control-label labelTitle"><span class="star01 fr">User Id</span></label>
					<div class="col-sm-5">
						<div class="input-group">
							<input type="text" class="form-control" id="USER_ID" [(ngModel)]="info.USER_ID">
							<span class="input-group-btn">
								<button type="button" class="btn btn-info" (click)="search()" title="조회"><i class="ti-search"></i></button>
							</span>
						</div>
					</div>
				</div>
				<div class="col-sm-2"></div>
			</div>
		</div>

		<ng-container *ngFor="let model of searchModelList; let i = index;">
			<ng-container *ngFor="let list of resultList; let i = index;">
				<div *ngIf="model.id === list.MODEL_ID &&  list.RESULT_JSON" class="simulationListWrap">
					<div class="checkbox-out">
						<input  type="checkbox" id="check{{model.id}}" value="{{model.id}}"/><label for="check{{model.id}}" class="checkbox tit-level2">{{model.text}}</label>
					</div>									
					<div class="layoutListWrap">						
						<div class="layoutListCon">
							<div class="lectureWrap" id="lectureSlide">
								<ng-container *ngFor="let item of list.RESULT_JSON.data; let j = index;">
									<div class="item">
										<div class="recomItem">
										<h4>추천아이템 {{item.rank}}</h4>
										</div>
										<div class="itemDetail">
											<!-- <div class="lectureColorWrap lectureColor01"><p>통계<span>기반</span></p></div> -->
											<div class="lectureThumbnail">															
												<img class="lazy-img loaded" 
												data-src="/assets/resources/img_app/thumbs/{{item.item_id}}.jpg" 
												alt="강의 썸네일" 
												src="/assets/resources/img_app/thumbs/{{item.item_id}}.jpg">
											</div>
											<div class="description">
												<em class="txt_info">{{item.itemnm}}</em>
												<strong class="tit_cont">{{item.itemnm}}</strong>
											</div>
										</div>
									</div>
								</ng-container>

							</div>
						</div>
					</div>
				</div>
			</ng-container>
		</ng-container>
		<ng-container *ngIf="searchModelList.length === 0; else modelNotFound">
			<div class="roundBorder mB0">
				<h2 class="tit-level2 c">조회할 모델을 선택하십시오.<span class="sotxt01"></span></h2>
			</div>
		</ng-container>
		<ng-template #modelNotFound>
			<ng-container *ngIf="!info.USER_ID; else dataNotFound">
				<div class="roundBorder mB0">
					<h2 class="tit-level2 c">User Id를 입력하십시오.<span class="sotxt01"></span></h2>
				</div>
			</ng-container>
			<ng-template #dataNotFound>
				<div *ngIf="resultList.length === 0" class="roundBorder mB0">
					<h2 class="tit-level2 c">조회 결과가 없습니다.<span class="sotxt01"></span></h2>
				</div>
			</ng-template>
		</ng-template>
	</div>
</div>

<app-modal-model [isCheckboxShown]="true"
				 [exceptItemList]="searchModelList"  #aiModelModal></app-modal-model>
